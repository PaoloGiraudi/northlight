{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "typeRoots": [ "@types" ],
    "types": [ "mocha", "chai-spies" ],
    "paths": {
      "@lib/*": [ "./lib/*" ]
    }
  },
  "include": [
    "lib/**/*",
    "test/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
